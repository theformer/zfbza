$prefix: 'conduct';

.#{$prefix} {
  // &-conduct {
  // }
  &-list {
    text-align: center;
  }
  &-time {
    font-size: ft(24);
    color: #AEB8C6;
    margin: vw(32) 0 vw(16) 0;
  }
  &-list-content {
    width: vw(686);
    margin: 0 auto;
    border-radius: vw(16);
    overflow: hidden;
    margin-bottom: vw(32);
  }
  &-list-picture {
    width: vw(686);
    height: vw(342);
    // line-height: vw(342);
    overflow: hidden;
    // text-align: center;
  }
  &-list-img {
     vertical-align: middle;
     width: 100%;
    height: 100%;
    border-radius: vw(16) vw(16) 0 0;
  }
  &-word {
    max-height: vw(152);
    background: #fff;
    font-size: ft(32);
    text-align: justify;
    padding: vw(32);
    letter-spacing: 0;
    // overflow: hidden;
    // text-overflow: ellipsis;
    // white-space: nowrap;
  }
  &-list-picture{

  }
}
