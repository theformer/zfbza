$prefix: "my-house";

.#{$prefix} {
    // &-box {
    //     width: 100vw;
    //     height: 100vh;
    //     background: #f8f8f8;
    //     padding-top: vw(16);
    //     overflow: hidden;
    // }

    &-modal {
        position: relative;
        //z-index: 1000;
    }
    &-box {
        width: 100vw;
        height: 100vh;
        background: #f4f7f9;
        padding-top: vw(16);
        overflow: hidden;
        .modal-mask{
            z-index: 1000;
        }
        .modal-wrap {
            width: vw(582);
            // height: vw(414);
            height: auto;
            padding: vw(48) 0 0 0;

        }

        .body {
            // height: vw(262);
            height: auto !important;
        }

        .auth-code {
            border: none;
            color: #255bda;
            font-size: ft(28);
        }

        .am-button::before {
            display: none;
        }

        .am-button-primary {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .am-button-primary {
            span {
                font-family: PingFangSC-Regular;
                font-size: ft(34);
                color: #ffffff;
                letter-spacing: 0;
            }
        }

        .verification-code {
            font-size: ft(28);
            padding: vw(20) 0;
            font-family: PingFangSC-Regular;
            text-align: left;
            height: vw(134);
            padding: vw(24) vw(48);
            color: #96a1b2;
        }

        .footer {
            padding: 0 !important;
            display: flex;
            align-items: center;
            justify-content: center;

            .confirm {
                font-weight: bold;
            }
        }
    }

    &-item {
        margin-bottom: vw(16);
    }

    &-house {
        padding: vw(24) vw(32);

        &-name {
            font-size: ft(34);
            color: #2b333f;
        }

        &-real {
            font-size: ft(34);
            color: #2b333f;
        }

        &-detail {
            font-size: ft(28);
            color: #808da1;
        }
    }

    &-complex {
        padding: vw(26) vw(32);
        position: relative;
        // border-bottom: 1px solid #dfe3e8;

        &-name {
            font-size: ft(34);
            color: #2b333f;
        }

        &-icon {
            width: vw(60);
            height: vw(60);
            margin-right: vw(16);
        }
    }
    &-complex:after {
        content: "  ";
        position: absolute;
        left: 0;
        bottom: 0;
        width: 100%;
        height: 1px;
        background-color: #dfe3e8;
        /* 如果不用 background-color, 使用 border-top:1px solid #f00; 效果是一样的*/
        -webkit-transform: scaleY(0.5);
        transform: scaleY(0.5);
        //z-index: 9;
    }

    &-item {
        &-img {
            width: vw(96);
            height: vw(96);
            border-radius: 50%;
            margin-left: vw(32);
            margin-right: vw(16);
        }

        &-name {
            font-size: ft(34);
            color: #2b333f;
        }

        &-phone {
            font-size: ft(28);
            color: #808da1;
        }

        &-arrow {
            width: vw(20);
            height: vw(36);
            // margin-right: 0;
            // margin-left: vw(220);
            // float: right;
            position: absolute;
            right: vw(30);
        }

        &-detail {
            padding: vw(20) 0;
            border-bottom: vw(2) solid #eff1f3;
        }

        &-permit {
            font-size: ft(28);
            color: #808da1;

            &:not(:last-child) {
                margin-bottom: vw(32);
            }

            &-list {
                padding: vw(32);
            }
        }

        &-type {
            color: #fff;
            font-size: ft(24);
            padding: vw(4) vw(12);
            background: #255bda;
            border-radius: vw(4);
            margin-left: vw(16);
        }

        &-person {
            margin-bottom: vw(4);
        }
    }
    &-footer {
        height: vw(128);
        background: #fff;
    }
    &-footer-button {
        height: vw(128);
        background: #fff;
        position: fixed;
        bottom: 0;
        left: 0;
        right: 0;
        z-index: 999;
    }

    &-button {
        height: vw(96);
        margin: vw(16) vw(32);
        background: #255bda;
        font-family: PingFangSC-Regular;
        font-size: ft(34);
        color: #ffffff;
        letter-spacing: 0;
    }

    &-list-img {
        width: vw(48);
        height: vw(48);
        margin-right: vw(12);
        // position: absolute;
        // bottom: vw(42);
        // right: vw(455);
        // z-index: 999;
    }

    &-form-name-ipt {
        font-family: PingFangSC-Regular;
        font-size: ft(28);
        color: #aeb8c6;
        letter-spacing: 0;
        //height: vw(48);
        width: vw(270);
    }

    &-form-code {
        height: vw(112);
        padding: vw(24) vw(48);
        border-top: vw(2) solid #eceef2;
        border-bottom: vw(2) solid #eceef2;
    }

    &-form-footer {
        width: 100%;
        display: flex;
        flex-direction: row;
        justify-content: space-between;
    }

    &-form-name-ipt {
        font-family: PingFangSC-Regular;
        font-size: ft(28);
        color: #aeb8c6;
        letter-spacing: 0;
        //height: vw(48);
        width: vw(270);
    }

    &-form-name-ipt::-webkit-input-placeholder {
        color: #aeb8c6;
    }
}
